<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techstorm.karaokehug"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.NoTitleBar"
        android:label="@string/app_name" >
        <activity
            android:name="com.techstorm.karaokehug.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.techstorm.karaokehug.activities.SongDetailActivity" />
        <activity android:name="com.techstorm.karaokehug.activities.SongsActivity" />
        <activity android:name="com.techstorm.karaokehug.activities.SearchActivity" />
        <activity android:name="com.techstorm.karaokehug.activities.FavouriteActivity"
            android:clickable="false" />
    </application>

</manifest>